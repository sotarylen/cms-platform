{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@cms/core/*": ["packages/core/src/*"],
      "@cms/shared-types": ["packages/core/src/types"],
      "@cms/config": ["packages/config/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
